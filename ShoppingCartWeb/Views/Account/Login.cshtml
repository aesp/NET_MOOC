﻿@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@inject SignInManager<ApplicationUser> SignInManager
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

@section Breadcrumb{
    <li class="active">Login</li>
}


<!-- CONTENT section -->
<div id="pageContent">
    <div class="container">
        <!-- title -->
        <div class="title-box">
            <h1 class="text-center text-uppercase title-under">INGRESA TUS DATOS O REGÍSTRATE</h1>
        </div>
        <!-- /title -->
        <div class="row">
            <section class="col-sm-12 col-md-6 col-lg-6 col-xl-4 col-xl-offset-2">
                <div class="login-form-box">
                    <h3 class="color small">REGÍSTRATE</h3>
                    <p>Registra tus datos para poder realizar tus compras.</p>
                    <a href="@Url.Action("Register","Account")" class="btn btn--ys btn--xl"><span class="icon icon-person_add"></span>CREAR CUENTA</a>
                    <br>
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    
                </div>
            </section>
            <div class="divider divider--md visible-sm visible-xs"></div>
            <section class="col-sm-12 col-md-6 col-lg-6 col-xl-4">
                <div class="login-form-box">
                    <h3 class="color small">INICIA SESIÓN</h3>
                    <p>
                        Si tienes una cuenta registrada, ingresa por favor;
                    </p>
                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" id="form-validation" name="form-validation" role="form" method="post" class="form-controle">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="email">Email<sup>*</sup></label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="password">Password <sup>*</sup></label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <button type="submit" class="btn btn--ys btn-top btn--xl"><span class="icon icon-vpn_key"></span>Ingresar</button>
                            </div>
                            <div class="divider divider--md visible-xs"></div>
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="pull-right note btn-top">* Campos Requeridos</div>
                            </div>
                        </div>
                        <p class="btn-top">
                            <a class="link-color" href="@Url.Action("ForgotPassword")">Olvidaste tu Contraseña?</a>
                        </p>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>

<!-- End CONTENT section -->
